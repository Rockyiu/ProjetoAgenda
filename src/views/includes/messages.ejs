<% if (errors.length > 0) { %>

<div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% errors.forEach(erro => { %>
            <%= erro %><br>
         <% }); %>
    </div>
  </div>
  <% } %>

<% if (success.length > 0) { %>

<div class="row">
    <div class="col my-3">
      <div class="alert alert-success">
        <% succes.forEach(erro => { %>
            <%= success %><br>
         <% }); %>
    </div>
  </div>
  <% } %>